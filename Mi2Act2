//Simple Cashier Program//

#include <iostream>
using namespace std;

int main(){
    
    int choice, payment, ch1, ch2, ch3;
    
    cout << "Good Day!" << endl;
    cout << "Select your order:" << endl;
    cout << "[1]Pepsi(₱100)" << endl;
    cout << "[2]Dr.Pepper(₱120)" << endl;
    cout << "[3]Coca-Cola(₱95)" << endl;
    
    cout << "Choice:";
    cin >> choice;
    
    switch(choice){
    //Case1
    case 1:
    cout << "Input Payment:₱";
    cin >> payment;
    if(payment>=100){
        cout << "You have purchased an item." << endl;
        ch1 = payment - 100;
        cout << "Change:₱" << ch1 << endl;
    }
    else{
        cout << "You don't have enough funds.";
    }
    break;
    
    //Case2
    case 2:
    cout << "Input Payment:₱";
    cin >> payment;
    if(payment>=120){
        cout << "You have purchased an item." << endl;
        ch2 = payment - 120;
        cout << "Change:₱" << ch2 << endl;
    }
    else{
        cout << "You don't have enough funds.";
    }
    break;
    
    //Case3
    case 3:
    cout << "Input Payment:₱";
    cin >> payment;
    if(payment>=95){
        cout << "You have purchased an item." << endl;
        ch3 = payment - 95;
        cout << "Change:₱" << ch3 << endl;
    }
    else{
        cout << "You don't have enough funds.";
    }
    break;
    
    default:
    cout << "Invalid Input." << endl;
    }
    
    return 0;
}
