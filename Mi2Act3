//Create a program in C++ that inputs any positive integer
if the input is odd multiply it by 3 and plus 1; else if the input is even divide it by 2 
Loop it, until the input value is 1.//

#include <iostream>

using namespace std;

int main(){
    
    int n, k=1;
    cout << "Enter Any Positive Integer: ";
    cin >> n;
    
    while (n != 1){
        
        if (n%2 == 0)
            n = n/2;
        
        else
            n = n*3+1;
            
        cout << "\nCurrent Given Value is " << n;
        k++;
    }
    return 0;
}
